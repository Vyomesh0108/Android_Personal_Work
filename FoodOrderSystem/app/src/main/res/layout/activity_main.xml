<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    android:background="#FFC300"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="FOOD MENU"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="20sp"
        app:cardCornerRadius="40sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#2962FF"
                android:text="LIST OF ITEMS"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:gravity="center">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="PIZZA = 200"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/pizza"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:backGroundColor="#DD2C00"
                    android:gravity="center_vertical"
                    app:textSize="10sp"
                    android:contentDescription="200"
                    android:tooltipText="0"
                    android:layout_marginRight="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BURGER = 100"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/burger"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:backGroundColor="#DD2C00"
                    android:gravity="center_vertical"
                    app:textSize="10sp"
                    android:contentDescription="100"
                    android:tooltipText="1"
                    android:layout_marginRight="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="FRANKIE = 150"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/frankie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:backGroundColor="#DD2C00"
                    android:gravity="center_vertical"
                    app:textSize="10sp"
                    android:contentDescription="150"
                    android:tooltipText="2"
                    android:layout_marginRight="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="PLATTER = 450"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/platter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:backGroundColor="#DD2C00"
                    android:gravity="center_vertical"
                    app:textSize="10sp"
                    android:contentDescription="450"
                    android:tooltipText="3"
                    android:layout_marginRight="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="PEPSI = 30"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/pepsi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:backGroundColor="#DD2C00"
                    android:gravity="center_vertical"
                    app:textSize="10sp"
                    android:contentDescription="30"
                    android:tooltipText="4"
                    android:layout_marginRight="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="COKE = 40"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/coke"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:backGroundColor="#DD2C00"
                android:gravity="center_vertical"
                app:textSize="10sp"
                android:contentDescription="40"
                android:tooltipText="5"
                android:layout_marginRight="10sp">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="SPRITE = 20"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold">

                </TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/water"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:backGroundColor="#DD2C00"
                    android:gravity="center_vertical"
                    app:textSize="10sp"
                    android:contentDescription="20"
                    android:tooltipText="6"
                    android:layout_marginRight="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/totAmt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="TOTAL AMOUNT : "
        android:gravity="center"
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Pay Now"
        android:textSize="40sp"></Button>

</LinearLayout>